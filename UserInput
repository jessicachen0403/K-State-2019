package mealplan;
import java.util.Scanner;


public class UserInput 
{
	public static void main (String[] args)
	{
		//name and welcome
		Scanner input = new Scanner(System.in);
		System.out.print("Enter your name: ");
		String name = input.nextLine();
		System.out.println("Welcome, " + name + "!");

		//questions
		System.out.print("What's your meal budget for this week?");
		int budget = input.nextInt();
		input.nextLine();

		System.out.print("What's your zipcode?");
		int zipcode = input.nextInt();

		System.out.print("Favorite type of restaurants? (American, Chinese, etc)");
		String rest = input.nextLine();
		input.nextLine();

		System.out.print("How many days do you plan to eat out?");
		int days = input.nextInt();

		Profile person = new Profile(budget, zipcode, rest, days);
		person.printWeeklyMealPlan();
	}
}
