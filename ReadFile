package test;

import java.io.File;
import java.util.ArrayList;
import java.util.Scanner;
public class ReadFile {

	private static ArrayList<String> groceryFoods = new ArrayList<String>();

	public static ArrayList<String> textToList(String fileName){
		ArrayList<String> output = new ArrayList<String>();
		try {
			Scanner input = new Scanner(new File("./src/" + fileName));
			while(input.hasNextLine()){
				String temp = input.nextLine().trim();
				//System.out.println(temp);
				output.add(temp);
			}
			input.close();
		}
		catch(Exception e){
			System.out.println("Error reading or parsing groceryfoods.txt\n" + e);
		}   
		return output;
	}
	public static String textToString(String fileName)
	{  
		String temp = "";
		try {

			Scanner input = new Scanner(new File("./src/" + fileName));

			while(input.hasNext()){
				temp = temp + input.next() + " ";
			}
			input.close();

		}
		catch(Exception e){
			System.out.println("Unable to locate " + fileName);
		}
		return temp.trim();
	}



}
